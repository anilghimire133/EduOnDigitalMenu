<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutUs">

        <ImageView
            android:id="@+id/Grovetta"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:paddingTop="8dp"
            android:src="@mipmap/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:padding="10dp"
            android:text="Grovetta is a leading company in Nepal that create product concept with deep learning and deliver innovation. Our product delivers innovation solutions that enables its customers to accomplish the digital transformation successfully."
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Grovetta" />

        <TextView
            android:id="@+id/description_paragraph2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description2"
            android:layout_marginTop="15dp"
            android:text=""
            android:textSize="17dp" />

        <TextView
            android:id="@+id/getintouch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:padding="2dp"
            android:text="Get in Touch"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description2" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getintouch"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"
            android:layout_toStartOf="@+id/getintouch"
            android:padding="2dp"
            android:text="Phone:"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/phone_no"
            app:layout_constraintTop_toBottomOf="@+id/getintouch" />

        <TextView
            android:id="@+id/phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/phone"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_toRightOf="@+id/phone"
            android:padding="3dp"
            android:text="(+977) 9849681293"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/getintouch"
            app:layout_constraintHorizontal_bias="0.846"
            app:layout_constraintStart_toStartOf="@+id/getintouch"
            app:layout_constraintTop_toBottomOf="@+id/getintouch" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/phone"
            android:layout_below="@+id/phone"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:padding="2dp"
            android:text="Email:"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/email_id"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/phone"
            app:layout_constraintTop_toBottomOf="@+id/phone" />

        <TextView
            android:id="@+id/email_id"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/email"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/phone"
            android:paddingTop="5dp"
            android:text="info@grovetta.com"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/phone_no"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/phone_no"
            app:layout_constraintTop_toBottomOf="@+id/phone_no" />

        <TextView
            android:id="@+id/web"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/phone"
            android:layout_below="@+id/email"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:padding="2dp"
            android:text="Web:"
            android:textColor="#000"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/web_page"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <TextView
            android:id="@+id/web_page"
            android:layout_width="134dp"
            android:layout_height="24dp"
            android:layout_alignBaseline="@+id/web"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/phone"
            android:paddingBottom="2dp"
            android:text="www.grovetta.com"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/email_id"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="@+id/email_id"
            app:layout_constraintTop_toBottomOf="@+id/email_id" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1.0" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>